{
    "manifest_version": 2,
    "name": "Game of Thrones Spoiler Blocker",
    "version": "1.0.1",

    "icons": {
        "1": "Assets/icon.png"
    },

    "permissions": [
        "tabs",
        "storage"
    ],

    "browser_action": {
        "default_popup": "Styles/popup.html"
    },

    "web_accessible_resources": [
        "Styles/content.css",
        "Fonts/*"
    ],

    "content_scripts": [{
        "css": ["Styles/content.css", "Styles/jqueryuimin.css"],
        "js": ["Scripts/jquerymin.js", "Scripts/jqueryuimin.js", "Scripts/content.js"],
        "matches": ["<all_urls>"],
        "run_at": "document_end"
    }]
}